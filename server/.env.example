# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
# Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/hr_management
# MongoDB Atlas (Cloud) - Replace with your connection string:
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/hr_management?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL (for CORS) - Update this for production
FRONTEND_URL=http://localhost:5173

# Production Frontend URL (optional - for production deployment)
# PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100